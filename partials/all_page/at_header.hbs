<div id="at_header">
    <div class="row">
        <div class="medium-4 columns">
            <div class="at_logo_container">
                {{#if @blog.logo}}
                    <a href="{{@blog.url}}"><img class="at_logo_img" src="{{@blog.logo}}" alt="{{@blog.title}}" />
                    {{else}}
                        <a href="{{@blog.url}}">
                {{/if}}
                    <span class="at_logo_text">{{@blog.title}}</span></a>
            </div>
        </div>
        <div class="medium-4 columns text-right hide-for-small-only">
            <div class="at_icon_menu">
                <a class="at_icon_menu_item" href="{{@blog.url}}" data-tooltip class="has-tip" title="Accueil"><span class="fa fa-home"></span></a>
                <a class="at_icon_menu_item" href="{{@blog.url}}/a-propos" data-tooltip class="has-tip" title="Ã€ propos"><span class="fa fa-user"></span></a>
